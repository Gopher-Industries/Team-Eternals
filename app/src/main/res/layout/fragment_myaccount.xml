<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountFragment"
    android:fillViewport="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/semicircle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/backButtonMyAccount"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:backgroundTint="#bed9ff"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageButton
            android:id="@+id/homeButtonMyAccount"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:backgroundTint="#bed9ff"
            android:scaleType="fitCenter"
            android:src="@drawable/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            />


        <TextView
            android:id="@+id/AccountTitle"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/welcome_to_your_profile_title"
            android:textColor="#013A8F"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/photo"
            app:layout_constraintTop_toBottomOf="@id/AccountTitle"
            app:layout_constraintBottom_toTopOf="@id/nameTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="15dp"
            />

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: James"
            android:textColor="#013A8F"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profilePicture"
            app:layout_constraintBottom_toTopOf="@id/button_first"/>

        <Button
            android:id="@+id/button_first"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#013A8F"
            android:text="Mobile Number"
            android:textSize="20sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toTopOf="@id/button_second"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTitle"/>


        <Button
            android:id="@+id/button_second"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#013A8F"
            android:text="Date of birth"
            android:textSize="20sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toTopOf="@id/button_third"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_first" />

        <Button
            android:id="@+id/button_third"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#013A8F"
            android:text="Emergency contact"
            android:textSize="20sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toTopOf="@id/button_forth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_second" />

        <Button
            android:id="@+id/button_forth"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#013A8F"
            android:text="Email"
            android:textSize="20sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_third" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>