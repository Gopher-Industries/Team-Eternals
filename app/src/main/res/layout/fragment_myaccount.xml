<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountFragment"
    android:fillViewport="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backButtonMyAccount"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:backgroundTint="#E6E6E6"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageButton
            android:id="@+id/homeButtonMyAccount"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:backgroundTint="#E6E6E6"
            android:scaleType="fitCenter"
            android:src="@drawable/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            />


        <TextView
            android:id="@+id/AccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/welcome_to_your_profile_title"
            android:textColor="#013A8F"
            android:textSize="28sp"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="169dp"
            android:layout_marginBottom="424dp"
            android:src="@drawable/lol"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#013A8F"
            android:text="Mobile Number"
            android:textSize="24sp"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toTopOf="@id/button_second"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AccountTitle" />

        <Button
            android:id="@+id/button_second"
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#013A8F"
            android:text="Date of birth"
            android:textSize="24sp"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toTopOf="@id/button_third"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_first" />

        <Button
            android:id="@+id/button_third"
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#013A8F"
            android:text="Emergency contact"
            android:textSize="24sp"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toTopOf="@id/button_forth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_second" />

        <Button
            android:id="@+id/button_forth"
            android:layout_width="360dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#013A8F"
            android:text="Email:123@qq.com"
            android:textSize="24sp"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_third" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>